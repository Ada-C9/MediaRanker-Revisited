<section class="top-ten">
  <h3>Top <%= media_category.pluralize.capitalize %></h3>
  <ul>
    <% data.each do |datum| %>
      <li>
        <h4>
          <%if session[:user_id] %>
          <%= link_to datum.title, work_path(datum) %>
          <% else %>
          <%= datum.title %>
          <% end %> 
          <small>by <%= datum.creator %></small>
        </h4>
        <p><%= datum.vote_count %> votes</p>
      </li>
    <% end %>
  </ul>
  <!-- <%= link_to "View More #{media_category.pluralize.capitalize}", works_path(media_category.pluralize.downcase) %> -->
</section>
