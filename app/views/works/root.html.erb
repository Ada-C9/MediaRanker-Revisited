<% if @best_work %>
  <section class="spotlight">
    <div>
      <h3><span class="media-spotlight-header">Media Spotlight</span>
        <%if session[:user_id] %>
         <%= link_to @best_work.title, work_path(@best_work) %> by <%= @best_work.creator %></h3>
         <% else %>
         <%= @best_work.title %> by <%= @best_work.creator %></h3>
         <% end %>

      <p><%= @best_work.vote_count %> votes - <%= @best_work.description %></p>
    </div>
  </section>
<% end %>

<hr class="root-hr" />

<section class="top-ten-container">
  <%= render partial: "top_ten", locals: {
    media_category: "movie",
    data: @movies
  }
  %>
  <%= render partial: "top_ten", locals: {
    media_category: "book",
    data: @books
  }
  %>
  <%= render partial: "top_ten", locals: {
    media_category: "album",
    data: @albums
  }
  %>
</section>
